{
  "manifest_version": 3,
  "name": "Polymarket Bet Analyzer",
  "version": "1.0.0",
  "description": "Real-time AI-powered betting analysis for Polymarket",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://polymarket.com/*",
    "https://gamma-api.polymarket.com/*",
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*",
    "http://127.0.0.1:5000/*",
    "https://api.duckduckgo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://polymarket.com/event/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
